{   "variables": {
        "azure_subscription_id": "{{env `AZURE_SUBSCRIPTION_ID`}}",
        "azure_tenant_id": "{{env `AZURE_TENANT_ID`}}",
        "azure_client_id": "{{env `AZURE_CLIENT_ID`}}",
        "azure_client_secret":"{{env `AZURE_CLIENT_SECRET`}}"
    },
    "builders": [{
        "type": "azure-arm",
        "subscription_id": "{{user `azure_subscription_id`}}",
        "tenant_id": "{{user `azure_tenant_id`}}",
        "client_id": "{{user `azure_client_id`}}",
        "client_secret": "{{user `azure_client_secret`}}",

        "resource_group_name": "cloudsquanch_rg",
        "storage_account": "cloudsquanchc53e67",

        "capture_container_name": "custom-images",
        "capture_name_prefix": "packer",

        "os_type": "Linux",
        "image_publisher": "canonical",
        "image_offer": "ubuntuserver",
        "image_sku": "16.04.0-LTS",

        "azure_tags": {
          "dept": "engineering"
        },

        "location": "centralus",
        "vm_size": "Standard_DS1_V2"
    }],
    "provisioners": [
      {
        "type": "shell",
        "scripts": [
          "../../shared/base.sh",
          "../../consul/scripts/consul_install.sh",
          "../../vault/scripts/vault_install.sh",
          "../../nomad/scripts/nomad_install.sh",
        ]
      },
      {
        "type": "file",
        "source": "../../consul/files/consul.service",
        "destination": "/etc/systemd/system/consul.service"
      },
      {
        "type": "file",
        "source": "../../vault/files/vault.service",
        "destination": "/etc/systemd/system/consul.service"
      },
      {
        "type": "file",
        "source": "../../nomad/files/nomad.service",
        "destination": "/etc/systemd/system/nomad.service"
      },
      {
        "type": "file",
        "source": "../../consul/files/config.json",
        "destination": "/etc/consul.d/config.json"
      },
      {
        "type": "file",
        "source": "../../vault/files/config.hcl",
        "destination": "/etc/vault/config.hcl"
      },
      {
        "type": "file",
        "source": "../../nomad/files/server.hcl",
        "destination": "/etc/nomad.d/server.hcl"
      },
  {
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
      "inline": [
        "apt-get update",
        "apt-get upgrade -y",

        "/usr/sbin/waagent -force -deprovision+user && export HISTSIZE=0 && sync"
      ],
      "inline_shebang": "/bin/sh -x",
      "type": "shell"
  }
]
}
